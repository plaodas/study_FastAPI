# Example env file for backend (do NOT commit secrets to VCS)

# Core
DATABASE_URL=postgresql://user:pass@db:5432/appdb
PROJECT_NAME=study_FastAPI
DEBUG=0
ENV_FILE=.env

# Testing
# Set INTEGRATION_TEST=1 when running integration tests in CI/Compose
INTEGRATION_TEST=0
TEST_DATABASE_URL=postgresql://test:pass@db:5432/appdb_test

# Security
SECRET_KEY=replace-with-strong-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS / Frontend
ALLOWED_ORIGINS=http://localhost:3000
BACKEND_BASE_URL=http://127.0.0.1:8000

# DB tuning
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=0

# Logging / Telemetry
LOG_LEVEL=INFO
SENTRY_DSN=
 
# Minimal .env.example for Compose interpolation.
# Keep only keys required by `compose.yaml`/`compose.test.yml`.
# App-specific runtime settings (logging, forbidden words, etc.) belong
# in `backend/.env` (or `backend/.env.example`).

# Postgres service credentials used by compose
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_db

# Primary DATABASE_URL used by compose (used by backend service env interpolation)
DATABASE_URL=postgresql://your_user:your_password@db:5432/your_db

# Optional: test DB override used by compose.test.yml
DATABASE_URL_TEST=postgresql://your_user:your_password@db:5432/your_test_db
